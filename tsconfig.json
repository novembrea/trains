{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "paths": {
      "trains/*": ["./trains/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
